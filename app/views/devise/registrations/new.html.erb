<% provide(:title, 'Create Account') %>

<div class="interior-container">
	<legend>Create An Account</legend>
	
	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-large", id: "linkedin-btn" %><br />
	  <% end -%>
	<% end -%>
	
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>

		<%= f.input :first_name %>
		<%= f.input :last_name %>
	  	<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>

		<%= f.button :submit, "Sign up", class: "btn" %>
	<% end %>

	<%= render "devise/shared/links" %>
</div><!-- END .interior-container -->



