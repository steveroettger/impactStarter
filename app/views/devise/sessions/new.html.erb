<% provide(:title, 'Sign In') %>

<div class="interior-container">
	<legend>Sign in</legend>

	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-large", id: "linkedin-btn" %><br />
	  <% end -%>
	<% end -%>
	
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		<%= f.input :email %>
		<%= f.input :password %>

	  	<% if devise_mapping.rememberable? -%>
	    	<%= f.input :remember_me, as: :boolean, inline_label: true, label: false %> 
	  	<% end -%>

		<%= f.button :submit, "Sign in", class: "btn" %>

	<% end %>

	<%= render "devise/shared/links" %>
	
</div><!-- END .interior-container -->
