<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <link rel="icon" type="image/png" href="/assets/favicon.png">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>

<div id="wrapper">

	<% flash.each_with_index do |(name, msg), i| %>
		<div class="alert alert-<%= name == :notice ? "success" : "error" %> alert-<%= i %>">
		    <div class="message">
          <a class="close" data-dismiss="alert" data-target=".alert-<%= i %>">Ã—</a>
		      <%= msg %>
        </div>
		</div>
	<% end %>

	<%= yield %>

</div><!-- END #wrapper -->


<%= render 'layouts/footer' %>

</body>
</html>


