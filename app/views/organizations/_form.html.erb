<%= simple_form_for(@organization, html: { class: 'form-vertical' }) do |f| %>

	<%= f.input :name %>
	<%= f.input :description, as: :ckeditor, :input_html => { :ckeditor => {:width => '800', :toolbar => 'full' } } %>
	<%= f.input :address %>
  	<%= f.input :city %>
	<%= f.input :state, as: :select, collection: us_states, include_blank: true %>
	<%= f.input :entity_type, as: :select, collection: ['Sole Proprietorship', 'LLP', 'LLC', 'S Corporation', 'C Corporation'] %>
	<%= f.input :tax_status, as: :select, collection: ['Non Profit', 'For Profit'] %>
	<% if @organization.image? %>
		<%= image_tag @organization.image_url, style: 'max-width:185px; max-height:185px;' %>
	<% end %>
	<%= f.input :image, as: :file, label: 'Add new image' %>

	<%= f.button :submit, "Submit", class: "btn" %>
<% end %>
